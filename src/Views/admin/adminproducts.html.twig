{% extends "adminLayout.html.twig" %}

{% block body %}

    <table id="example" class="display" cellspacing="0" width="100%">

        <a href="index.php?section=admin&page=addproduct" class="btn btn-success" title="Ajouter">Ajouter un produit</a>

        <thead>
        <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Description</th>
            <th>Catégorie</th>
            <th>Image</th>
            <th>Modifier</th>
            <th>Supprimer</th>
        </tr>
        </thead>
        <tfoot>
        <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Description</th>
            <th>Catégorie</th>
            <th>Image</th>
            <th>Modifier</th>
            <th>Supprimer</th>
        </tr>
        </tfoot>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.productsId }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.categorie }}</td>
                <td>{{ product.image }}</td>
                <td class="col-btn">
                    <a href="index.php?section=admin&page=updateproducts&id={{ product.productsId }}" class="btn btn-warning btn-lg">
                        <span class="glyphicon glyphicon-edit" title="Modifier"></span>
                    </a>
                </td>
                <td class="col-btn">
                    <a href="#" class="btn btn-danger btn-lg">
                        <span class="glyphicon glyphicon-trash" title="Supprimer"></span>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}