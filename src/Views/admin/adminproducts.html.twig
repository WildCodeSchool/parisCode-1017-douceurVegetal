{% extends "adminLayout.html.twig" %}

{% block body %}

    <!-- Penser au bouton "Ajouter fiche produit" -->

    <table id="example" class="display" cellspacing="0" width="100%">
        <thead>
        <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Description</th>
            <th>Catégorie</th>
            <th>Image</th>
            <th>Boutons</th>
        </tr>
        </thead>
        <tfoot>
        <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Description</th>
            <th>Catégorie</th>
            <th>Image</th>
            <th>Boutons</th>
        </tr>
        </tfoot>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.productsId }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.categorie }}</td>
                <td>{{ product.image }}</td>
                <td>View/Edit/Delete</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}