<div class="container">
    <div class="row">

        <div class="row">
            <div class="col-md-2 login-header">
                <a href="index.php"><img src="assets/img/logo/douceur_vegetale_logo_glyphe_vert.png" alt="glyphe Douceur Végétale"
                                class="logo-login"></a>
            </div>
        </div>

        <div class="row row-login">
            <div class="well col-md-5 center login-box">
                <div class="alert alert-info">
                    Connectez-vous avec votre identifiant et votre mot de passe.
                </div>
                <form class="form-horizontal" action="index.php?section=login" method="post">

                    {# Quand on fait un post, on ne passe pas les paramètres dans l'url mais grâce aux input hidden #}
                    <input type="hidden" name="action" value="connect">
                    <input type="hidden" name="connect" value="{{ user.username }}">
                    <input type="hidden" name="connect" value="{{ user.password }}">

                    <fieldset>
                        <div class="input-group input-group-lg">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-user red"></i></span>
                            <input type="text" class="form-control" name="username" id="username" placeholder="Identifiant" required>
                        </div>
                        <p class="form-error">{{ error }}</p>
                        <div class="clearfix"></div>
                        <br>

                        <div class="input-group input-group-lg">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-lock red"></i></span>
                            <input type="password" class="form-control" name="password" id="password" placeholder="Mot de passe" required>
                        </div>
                        <div class="clearfix"></div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-login">Connexion</button>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>

