{% extends "adminLayout.html.twig" %}

{% block body %}

    <table id="example" class="display" cellspacing="0" width="100%">
        <thead>
        <tr>
            <th>Telephone</th>
            <th>Email</th>
            <th>Adresse</th>
            <th>Horaires</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for shopinfo in shopinfos %}
            <tr>
                <td>{{ shopinfo.telephone }}</td>
                <td>{{ shopinfo.email }}</td>
                <td>{{ shopinfo.address }}</td>
                <td>{{ shopinfo.hours }}</td>
                <td><a href="" class="btn btn-warning">Edit</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}