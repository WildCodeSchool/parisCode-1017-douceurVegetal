{% extends 'layout.html.twig' %}

{% block body %}
    <div id="header">
        <div class="center text-center">
            <div class="banner">
                <h1><img class="logo" src="assets/img/logo/douceur_vegetale_logo.png" alt="logo Douceur Végétale"></h1>
                <video autoplay="" loop="" muted="" preload="auto" style="display: inline-block"
                       poster="assets/img/video/screen.png">
                    <source src="assets/img/video/video.mp4" type="video/mp4">
                </video>
            </div>
        </div>
        <div class="bottom text-center">
            <a id="scrollDownArrow" href="#ancre"><i class="fa fa-chevron-down"></i></a>
        </div>
    </div>
    <!-- /#header -->

    <div id="story">
        <section id="ancre" class="ss-style-top"></section>
        <div class="container">

            <h2 class="section-title text-center">{{ homepage.title }}</h2>
            <p class="col-lg-offset-3 col-md-6 main text-center value_bold">{{ homepage.description }}
            </p>
            <div class="row text-center story">
                <div>
                    <div class="col-wrapper">
                        <img src="{{ homepage.url }}">
                    </div>
                </div>
            </div>
            <!-- /.services -->
        </div>
        <!-- /.container -->
        <section class="ss-style-bottom"></section>
    </div><!-- #story -->


    <div id="special-offser" class="parallax pricing">
        <div class="container inner">

            <h2 class="section-title text-center"><a href="index.php?section=products">Decouvrez nos produits</a></h2>
            <p class="lead main text-center">There is no sincerer love than the love of food!</p>

        </div>
        <!-- /.container -->
    </div><!-- /#special-offser -->
{% endblock %}