{% extends "layout.html.twig" %}

{% block body %}

    <!-- /#header -->
    <div id="header">
        <div class="center text-center">
            <div class="banner">
                <img src="assets/img/banners/cupcake-2605694.jpg" type="image">
            </div>
        </div>
        <div class="bottom text-center">
            <a id="scrollDownArrow" href="#"><i class="fa fa-chevron-down"></i></a>
        </div>
    </div>

    <div class="container-fluid">

        <div class="row">

            <section class="ss-style-top"></section>

            <div class="col-xs-12 col-sm-6 location">
                <!-- /#location -->
                <div>
                    <p class="address">Nous vous accueillons du mardi au vendredi, de 9h à 19h <br/> au 11 rue de Poissy, 75005 Paris
                    </p>
                    <p class="address">Vous pouvez nous joindre au 06 58 74 30 91 <br/> ou via le formulaire de contact ci-contre</p>
                </div>

                <!-- /#map -->
                <div id="map">
                    <script>

                        function initMap() {

                            var map = new google.maps.Map(document.getElementById('map'), {
                                zoom: 12,
                                center: {lat: 48.8534, lng: 2.3488}
                            });


                            var labels = ['Douceur Végétale'];

                            var markers = locations.map(function (location, i) {
                                return new google.maps.Marker({
                                    position: location,
                                    label: labels[i % labels.length]
                                });
                            });

                            var markerCluster = new MarkerClusterer(map, markers,
                                {imagePath: 'https://developers.google.com/maps/documentation/javascript/examples/markerclusterer/m'});
                        }

                        var locations = [{lat: 48.849072, lng: 2.3504113}]
                    </script>
                </div>
            </div>

            <!-- /#form -->
            <div class="col-xs-12 col-sm-6 form">
                <form action="">
                    <div>
                        <label for="name">Votre nom* </label>
                        <input type="text" id="name" name="name" placeholder="Votre nom">
                    </div>
                    <div>
                        <label for="firstname">Votre prénom* </label>
                        <input type="text" id="firstname" name="firstname" placeholder="Votre prénom">
                    </div>
                    <div>
                        <label for="email">Votre email* </label>
                        <input type="text" id="email" name="email" placeholder="Votre email">
                    </div>
                    <div>
                        <select name="object" id="object">
                            <option value="object_info" selected>Je voudrais un renseignement</option>
                            <option value="object_order">Je voudrais passer une commande</option>
                            <option value="object_other">Autre</option>
                        </select>
                    </div>
                    <div>
                        <textarea name="message" id="message" cols="30" rows="10">Votre message</textarea>
                    </div>
                    <div>
                        <input type="submit" name="formulaire_post" class="button1" value="Envoyer">
                    </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}