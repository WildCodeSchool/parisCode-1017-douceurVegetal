{% extends "layout.html.twig" %}

{% block body %}

    <!-- /#header -->
    <div id="header">
        <div class="center text-center">
            <div class="banner">
                <img src="assets/img/waffle.jpg" type="image">
            </div>
        </div>
        <div class="bottom text-center">
            <a id="scrollDownArrow" href="#"><i class="fa fa-chevron-down"></i></a>
        </div>
    </div>

    <div class="container-fluid">

        <div class="row">

            <section class="ss-style-top"></section>

            <h2 class="section-title text-center">Nos Produits</h2>
            {% for product in products %}
                <div class="col-md-6">
                    <div class="hovereffect">
                        <img class="img-responsive" src="assets/img/cake.jpeg" alt="">

                        <div class="overlay">
                            <h2>{{ product.name }}</h2>
                            <p>
                                {{ product.description }}
                            </p>
                        </div>

                    </div>
                </div>
            {% endfor %}
        </div>

    </div>

{% endblock %}