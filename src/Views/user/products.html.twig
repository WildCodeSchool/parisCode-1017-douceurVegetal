{% extends "layout.html.twig" %}

{% block body %}


    <!-- /#header -->
    <div id="header">
        <div class="center text-center">
            <div class="banner" id="banner">
                <h1><img class="logo" src="assets/img/logo/douceur_vegetale_logo.png" alt="logo Douceur Végétale"></h1>
                <img src="assets/img/banners/waffle.jpg" type="image">
            </div>
        </div>
        <div class="bottom text-center">
            <a id="scrollDownArrow" href="#ancre"><i class="fa fa-chevron-down"></i></a>
        </div>
    </div>

    <div class="container-fluid">

        <div class="row">

            <section id="ancre" class="ss-style-top"></section>

            <h2 class="section-title text-center">Nos Produits</h2>

                <div class="row-fluid">
                    <div class="col-md-6">


                                    <img class="img-responsive banner_sem" src="assets/img/produit_semaine.png"
                                         alt="">







                    </div>


            <!--Produit de la semaine - Image -->

                    <div class="col-md-6">
                        <div class="hovereffect">
                            <img class="img-responsive image_prod_sem" src="{{ productWeek.url }}" alt="Produit de la semaine">
                            <div class="overlay">

                                    <h2>{{ productWeek.name }}</h2>
                                    <p>
                                        {{ productWeek.description }}
                                    </p>

                            </div>
                        </div>
                    </div>
                </div>
        </div>


    </div>


<div class="container-fluid">

<div class="row">



            {% for product in products %}
                <div class="col-6 col-md-auto">
                    <div class="hovereffect">
                        <img class="img-responsive" src="{{ product.url }}">

                        <div class="overlay">
                            <h2>{{ product.name }}</h2>
                            <p>
                                {{ product.description }}
                            </p>
                        </div>

                    </div>
                </div>
            {% endfor %}

</div>
</div>







{% endblock %}